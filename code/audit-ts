#!/bin/bash

# ===========================================
# ðŸ” JS/TS/React Project Audit
# ===========================================
# Usage: ./audit-ts [entry-point]
# Example: ./audit-ts src/main.tsx
# ===========================================

PKG="bunx"

# Folders to ignore in tree
IGNORE="node_modules|.git|dist|build|.next|.nuxt|.output|.history|coverage|.cache|.turbo|.svelte-kit|.vercel|__pycache__|audit"

# -------------------------------------------
# Detect entry point
# -------------------------------------------
detect_entry() {
    if [ -n "$1" ]; then
        echo "$1"
    elif [ -f "src/index.tsx" ]; then
        echo "src/index.tsx"
    elif [ -f "src/index.ts" ]; then
        echo "src/index.ts"
    elif [ -f "src/main.tsx" ]; then
        echo "src/main.tsx"
    elif [ -f "src/main.ts" ]; then
        echo "src/main.ts"
    elif [ -f "src/main.js" ]; then
        echo "src/main.js"
    elif [ -f "src/App.tsx" ]; then
        echo "src/App.tsx"
    elif [ -f "app/layout.tsx" ]; then
        echo "app/layout.tsx"
    elif [ -f "pages/_app.tsx" ]; then
        echo "pages/_app.tsx"
    else
        echo ""
    fi
}

# -------------------------------------------
# Main
# -------------------------------------------

ENTRY=$(detect_entry "$1")

# Timestamp for this audit run
TIMESTAMP=$(date +%Y-%m-%d-%H-%M)
AUDIT_DIR="audit/$TIMESTAMP"

echo "ðŸ“ Project: JS/TS/React"
echo "ðŸ“ Entry point: ${ENTRY:-"(not detected)"}"
echo "ðŸ“ Timestamp: $TIMESTAMP"
echo ""
echo "ðŸš€ Starting audit..."
echo ""

# Create folder with timestamp
mkdir -p "$AUDIT_DIR"

# ðŸ“ Tree
echo "ðŸ“ Generating file tree..."
if command -v tree &> /dev/null; then
    tree -I "$IGNORE" --dirsfirst -a > $AUDIT_DIR/audit-tree.txt
    echo "   âœ“ $AUDIT_DIR/audit-tree.txt"
else
    echo "   âš ï¸  'tree' not installed"
    echo "   ðŸ’¡ brew install tree"
fi

if [ -z "$ENTRY" ]; then
    echo "   âš ï¸  Entry point not detected, skipping madge..."
else
    # ðŸ•¸ï¸ Visual graph
    echo "ðŸ•¸ï¸  Generating visual graph..."
    if command -v gvpr &> /dev/null; then
        $PKG madge --image $AUDIT_DIR/audit-graph.svg "$ENTRY" 2>/dev/null
        echo "   âœ“ $AUDIT_DIR/audit-graph.svg"
    else
        echo "   âš ï¸  Graphviz not installed"
        echo "   ðŸ’¡ brew install graphviz"
    fi

    # ðŸ“Š JSON
    echo "ðŸ“Š Exporting dependencies..."
    $PKG madge --json "$ENTRY" > $AUDIT_DIR/audit-deps.json 2>/dev/null
    echo "   âœ“ $AUDIT_DIR/audit-deps.json"

    # ðŸ”„ Circular
    echo "ðŸ”„ Checking circular dependencies..."
    $PKG madge --circular "$ENTRY" > $AUDIT_DIR/audit-circular.txt 2>/dev/null
    if grep -q "â†’\|>" $AUDIT_DIR/audit-circular.txt 2>/dev/null; then
        CIRCULAR_COUNT=$(grep -c "â†’\|>" $AUDIT_DIR/audit-circular.txt 2>/dev/null || echo "?")
        echo "   âš ï¸  $AUDIT_DIR/audit-circular.txt ($CIRCULAR_COUNT found)"
    else
        echo "   âœ“ $AUDIT_DIR/audit-circular.txt (none ðŸŽ‰)"
    fi

    # ðŸ“ˆ Summary
    echo "ðŸ“ˆ Generating summary..."
    $PKG madge --summary "$ENTRY" > $AUDIT_DIR/audit-summary.txt 2>/dev/null
    echo "   âœ“ $AUDIT_DIR/audit-summary.txt"
fi

# -------------------------------------------
# Knip (works for all)
# -------------------------------------------
echo "ðŸ”¬ Running Knip..."
$PKG knip > $AUDIT_DIR/audit-knip.txt 2>&1

UNUSED_FILES=$(grep -c "^src/" $AUDIT_DIR/audit-knip.txt 2>/dev/null || echo "0")
UNUSED_DEPS=$(grep -c "package.json" $AUDIT_DIR/audit-knip.txt 2>/dev/null || echo "0")

echo "   âœ“ $AUDIT_DIR/audit-knip.txt ($UNUSED_FILES files, $UNUSED_DEPS deps)"

# -------------------------------------------
# Summary
# -------------------------------------------
echo ""
echo "==========================================="
echo "âœ… Audit complete!"
echo "==========================================="
echo ""
ls -lh "$AUDIT_DIR"/
echo ""

echo "ðŸ“Œ Next steps:"
echo "   1. cat $AUDIT_DIR/audit-circular.txt  (critical)"
echo "   2. cat $AUDIT_DIR/audit-knip.txt      (cleanup)"
echo "   3. open $AUDIT_DIR/audit-graph.svg    (visual)"
echo ""
